{
  "name": "@beeylo/shopify-integration",
  "version": "1.0.0",
  "description": "Shopify integration service for Beeylo - syncs orders, customers, and sends tracking updates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && npm run copy-views",
    "copy-views": "node -e \"require('fs').cpSync('src/views', 'dist/views', {recursive: true})\"",
    "start": "node dist/server.js",
    "test": "jest"
  },
  "keywords": [
    "shopify",
    "beeylo",
    "orders",
    "tracking",
    "integration"
  ],
  "author": "Beeylo",
  "license": "MIT",
  "dependencies": {
    "@shopify/shopify-api": "^10.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "crypto": "^1.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
